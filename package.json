{
	"name": "foxpro-lsp",
	"description": "A language server for VFP",
	"author": "Sean Kaat",
	"license": "MIT",
	"version": "1.0.0",
	"publisher": "Watertight",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.100.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Watertight-skaat/vfp-linter"
	},
	"activationEvents": [
		"onLanguage:foxpro"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "foxpro",
				"aliases": [
					"Visual FoxPro",
					"vfp"
				],
				"extensions": [
					".prg",
					".mpr",
					".spr",
					".h",
					".fxp"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "npm run build:parser && tsc -b && npm run copy-js",
		"dev": "concurrently \"npm run watch:parser\" \"npm run watch:copy\" \"tsc -b -w\"",
		"build:parser": "npx peggy -o server/src/parser.js server/src/foxpro.pegjs --format es --dts",
		"watch:parser": "npx peggy -o server/src/parser.js server/src/foxpro.pegjs --format es --dts -w",
		"watch:copy": "node ./scripts/copy-src-watch.js",
		"copy-js": "node ./scripts/copy-src-js.js",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "node ./test-files/run-all-tests.js"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22",
		"concurrently": "^9.2.1",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"dependencies": {
		"peggy": "^5.0.6"
	}
}